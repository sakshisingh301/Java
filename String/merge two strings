

import java.util.*;
public class Main
{
	public static void main(String[] args) {
		String s1="hello";
		String s2="bye";
		int n1=s1.length();
		int n2=s2.length();
		StringBuilder sb=new StringBuilder();
		
		int i=0;
		int j=0;
		while(i<n1 && j<n2)
		{
		    sb.append(s1.charAt(i)).append(s2.charAt(i));
		    i++;
		    j++;
		}
		while(i<n1)
		{
		    sb.append(s1.charAt(i));
		    i++;
		}
		while(j<n2)
		{
		    sb.append(s2.charAt(j));
		    j++;
		}
		System.out.println(sb);
	}
}

