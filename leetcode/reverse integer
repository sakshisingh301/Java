class Solution {
    public int reverse(int x) {
      if(x<0)
      {
        x=Math.abs(x);  
        int sum=0;
        int r=0;
        while(x>0)
        {
         r=x%10;
         x=x/10;
         sum=sum*10+r;
        }
          return (sum*(-1));
      }
        else
        {
             
        int sum=0;
        int r=0;
        while(x>0)
        {
         r=x%10;
         x=x/10;
         sum=sum*10+r;
        }
            return sum;
        }
        
        
    }
}
