

public class Main
{
	public static void main(String[] args) {
		int [] a={1, 4, 2, 10, 23, 3, 1, 0, 20};
		int k=4;
		
		int sum=0;
		int res=0;
		
		
		for(int i=0;i<k;i++)
		{
		  sum=sum+a[i];  
		}
		
		for(int i=k;i<a.length;i++)
		{
		    sum=a[i]+sum-a[i-k];
		    res=Math.max(res,sum);
		}
		System.out.println(res);
	}
}
